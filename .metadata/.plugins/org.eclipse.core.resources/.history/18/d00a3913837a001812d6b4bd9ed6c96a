package com.info;

public class A {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		for (int i = 1; i <=6; i++) {
			for (int j = 1; j <=i; j++) {
				System.out.println(j);
	
			}
		for (int k = 6; k >i; k--) {
			System.out.println(k);
			
		}
System.out.println();
	}


